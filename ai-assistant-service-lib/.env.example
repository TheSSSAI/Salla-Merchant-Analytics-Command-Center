# Application
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/salla_analytics?schema=public"

# Vector Database (pgvector support)
VECTOR_DB_URL="postgresql://user:password@localhost:5432/salla_vectors?schema=public"

# OpenAI API
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4-turbo"

# ClickHouse (OLAP)
CLICKHOUSE_HOST="http://localhost:8123"
CLICKHOUSE_USER="default"
CLICKHOUSE_PASSWORD=""
CLICKHOUSE_DB="salla_analytics_olap"

# Authentication
JWT_SECRET="super-secret-jwt-key-min-32-chars"
JWT_EXPIRY="15m"
REFRESH_TOKEN_SECRET="super-secret-refresh-key"
REFRESH_TOKEN_EXPIRY="30d"

# Infrastructure
AWS_REGION="us-east-1"