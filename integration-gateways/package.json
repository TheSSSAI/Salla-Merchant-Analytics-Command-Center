{
  "name": "@salla-analytics/integration-gateways",
  "version": "1.0.0",
  "description": "Enterprise-grade integration library serving as an Anti-Corruption Layer for third-party APIs (Salla, OpenAI, Postmark) with built-in resilience and type safety.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.base.json",
    "clean": "rimraf dist coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --config jest.config.base.js",
    "test:coverage": "jest --config jest.config.base.js --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "salla",
    "openai",
    "postmark",
    "gateway",
    "resilience",
    "acl",
    "circuit-breaker"
  ],
  "author": "Salla Analytics Architecture Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cockatiel": "^3.1.0",
    "openai": "^4.28.0",
    "postmark": "^4.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.4.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}