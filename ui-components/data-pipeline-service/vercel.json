{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/sync-daily",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/cleanup-expired-tokens",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/process-recoveries",
      "schedule": "*/15 * * * *"
    }
  ],
  "functions": {
    "src/index.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}