{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "turbo run build",
  "devCommand": "turbo run dev",
  "ignoreCommand": "bash -c 'if [ \"$VERCEL_ENV\" == \"production\" ]; then exit 1; else exit 0; fi'",
  "crons": [
    {
      "path": "/api/webhooks/cron-reconcile",
      "schedule": "0 2 * * *" 
    },
    {
      "path": "/api/jobs/data-retention",
      "schedule": "0 4 * * *"
    }
  ]
}