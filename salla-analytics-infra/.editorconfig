# http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,json,yml,yaml}]
indent_size = 2

[*.{tf,tfvars,hcl}]
indent_size = 2

[*.{cs,csx}]
indent_size = 4

[*.{go}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab