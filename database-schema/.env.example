# Environment Configuration
# Copy this file to .env and fill in the values

# NODE_ENV: development, test, production
NODE_ENV=development

# Database Connection
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# Ensure ?pgbouncer=true is appended if using a transaction pooler (e.g. Supabase, Neon)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/salla_analytics?schema=public"

# Direct Database Connection
# Used for migrations where direct TCP access is required (bypassing the pooler)
DIRECT_URL="postgresql://postgres:postgres@localhost:5432/salla_analytics?schema=public"

# Optional: Logging level for Prisma (info, query, warn, error)
PRISMA_LOG_LEVEL="info"